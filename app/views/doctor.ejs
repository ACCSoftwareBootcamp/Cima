<%- include('partials/header.ejs')%>
<%- include('partials/navbar-loggedin.ejs')%>


<div class="container my-3 dark-section justify-content-center" id="contact">
    <span onclick="location.href='/dashboard'">   <i class="fas fa-chevron-circle-left fa-2x my-2"></i></span>
    <form action="/doctor" method="POST">
        <legend>Doctor</legend>
        <label for="doctor" class="form-label">Name</label>
        <input class="form-control" type="text" name="doctor" id="doctor">
        <div class="row">
            <!-- Start & End Visit -->
            <div class="col-6">
                <label for="startVisit" class="form-label">First Visit</label>
                <input class="form-control" type="date" name="startVisit"  id="startVisit" required>
            </div>
            <div class="col-6">
                <label for="endVisit" class="form-label">Last Visit</label>
                <input class="form-control" type="date" name="endVisit" id="endVisit" required>
            </div>
        </div>
        <hr>
        <u><h4>Contact</h4></u>
        <div class="row">
            <div class="col-6">
            <label for="phone">Phone</label>
            <input type="text" class="form-control" name="phone" id="phone" placeholder="555-555-5555" required>
            </div>
            <div class="col-6">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="email" id="email" placeholder="user@example.com">   
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <label for="address">Address</label>
                <input type="text" class="form-control" name="address" id="address">
            </div>
            <div class="col-4">
                <label for="city">City</label>
                <input type="text" name="city" class="form-control" id="city">
            </div>
            <div class="col-2">
                <label for="state">State</label>
                <input type="text" name="state" class="form-control" id="state">
            </div>
            <div class="col-2">
                <label for="zip">Zip</label>
                <input type="text" class="form-control" name="zip" id="zip">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6">
                <button id="Submit" name="Submit" class="btn btn-block btn-custom my-4">Add Doctor</button>
            </div>
           
        </div>
    </form>
</div>

<%- include('partials/footer.ejs') %>