

    <canvas id="painLevelChart"></canvas>



    <!-- close for loop -->
<script>
    




    let myChart = document.getElementById('painLevelChart').getContext('2d');
    
    let painLevelChart = new Chart(myChart, {
        type: 'bar',
        data: {
            labels: ['Average Pain Level <%=average%>', 'Percentage of Logs <%=logs%>'],
            datasets: [{
                label: ['PainLevel', 'Percentage of Logs'],
                data: ['<%=average%>', '<%=logs%>'],
                backgroundColor: [
                'rgb(82,74,92)',
                'rgb(130,129,136)'],
                borderWidth: 3,
                borderColor: '#777',
                hoverBorderColor: '#eee'
            }]
         },
         
        options: {
            title:{ 
                display: true,    
                text: 'Average Pain Level',
                fontSize:25
            },
            scales: {
                yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
        }
    })


</script>