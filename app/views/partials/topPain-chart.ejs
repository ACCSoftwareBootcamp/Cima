

    <canvas id="topPain-Chart"></canvas>



    <!-- close for loop -->
<script>
    
    



    let SecondChart = document.getElementById('topPain-Chart').getContext('2d');
    
    let topPainChart = new Chart(SecondChart, {
        type: 'bar',
        data: {
            labels: ['<%=topPain[0]%>','<%=topPain[1]%>','<%=topPain[2]%>'] ,
            datasets: [{
                label: ['Top Pain Locations'],
                data: ['<%=painCounts[0]%>', '<%=painCounts[1]%>', '<%=painCounts[2]%>'],
                backgroundColor: [
                'rgb(82,74,92)',
                'rgb(130,129,136)'],
                borderWidth: 3,
                borderColor: '#777',
                hoverBorderColor: '#eee'
            }]
         },
         
        options: {
            title:{ 
                display: true,    
                text: 'Top Pain Locations',
                fontSize:25
            },
            scales: {
            yAxes: [{
                    ticks: {
                    beginAtZero:true
                            }
                    }]
            }
        }
    })

    
</script>