<%- include('partials/header.ejs')%>
<%- include('partials/navbar-loggedin.ejs')%>


<div class="container my-3 dark-section justify-content-center" id="contact">

    <span onclick="location.href='/dashboard'">   <i class="fas fa-chevron-circle-left fa-2x my-2"></i></span>
    <form class="form-horizontal" action="/symptom" method="POST">
        <legend>Treatment</legend>

        <div class="row justify-content-center my-2">
            <div class="col-8">
                <label for="treatement" class="form-label">Treatment</label>
                <input class="form-control" type="text" name="treatment" id="treatment" placeholder="Medicine name">
            </div>
        </div>
        <div class="row justify-content-center my-2">
            <div class="col-4">
                <label for="startVisit" class="form-label">Started Taking</label>
                <input class="form-control" type="date" name="start"  id="start">
            </div>
            <div class="col-4">
                <label for="endVisit" class="form-label">Last Taken</label>
                <input class="form-control" type="date" name="end" id="end">
            </div>
        </div>
        <div class="row justify-content-center my-2">
            <div class="col-6">
                <label class="form-label" for="effective">Effective</label>
                <select id="effective" name="effective" class="form-control form-select">
                    <option value="0">0 -No Relief</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5 - Somewhat</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10 - Full Relief</option>
                  </select>
            </div>
        </div>
        <div class="row justify-content-center my-2">
            <div class="col-6">
                <label for="review" class="form-label">Review & Additional Notes</label>
                <textarea class="form-control" cols="30" id="review" name="review" placeholder=" " rows="4"></textarea>
            </div>
        </div>
        <div class="row justify-content-center my-3">
            <button class="btn btn-block btn-custom " name="submit" type="submit">Add treatement</button>
        </div>
    </form>
</div>
<%- include('partials/footer.ejs') %>